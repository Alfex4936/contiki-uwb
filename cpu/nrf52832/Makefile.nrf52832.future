INC_PATHS += components/softdevice/s$(NRF52_SOFTDEVICE)/headers
INC_PATHS += components/softdevice/s$(NRF52_SOFTDEVICE)/headers/nrf52/

NRF_C_SOURCE_FILES += $(NRF52_SDK_ROOT)/components/ble/common/ble_advdata.c

#this suppose Softcevie is used for BLE
CONTIKI_CPU_SOURCEFILES += ble-core.c ble-mac.c

#softdevice flags
CFLAGS += -DSOFTDEVICE_PRESENT
CFLAGS += -DS$(NRF52_SOFTDEVICE)
