else

#no softdevice
NRF_C_SOURCE_FILES += components/libraries/fifo/app_fifo.c \
#                   $(NRF52_SDK_ROOT)/components/libraries/util/app_util_platform.c
INC_PATHS += components/drivers_nrf/nrf_soc_nosd
